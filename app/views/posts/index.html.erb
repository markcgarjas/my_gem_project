<h1>Post List</h1>

<table class="table table-bordered">
  <thead class="bg-info">
    <tr>
      <td>ID</td>
      <td>Title</td>
      <td>Content</td>
      <td>User</td>
      <td>Action</td>
    </tr>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.user.email %></td>
      <td><%= link_to 'Show', post_path(post) %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= button_to 'Delete', post_path(post), class: "btn btn-sm", style: 'background-color: red;', method: :delete, :onclick=>"return confirm('Are you sure you want to delete?')"if post.user == current_user%></td>
    </tr>
    <% end %>
</table>

<%= link_to 'New Post', new_post_path%>