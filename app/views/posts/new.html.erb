<div class="text-center mb-5">
  <h1 class="text-light">New Post</h1>
</div>

<div class="text-center">
  <div class="d-flex justify-content-center">
    <div class="col-sm-3">
      <div class="card info">
        <div class="card-body">
      <% if @post.errors.any? %>
        <ul>
          <% @post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @post do |form| %>
        <div>
          <%= form.label :title , class: 'fs-4 font-monospace'%><br>
          <%= form.text_field :title, class: 'form-control',placeholder: 'Title'%>
        </div>
        <div>
          <%= form.label :content , class: 'fs-4 font-monospace'%><br>
          <%= form.text_area :content ,rows:4, class: 'form-control',placeholder: 'Content'%>
        </div>
        <%= form.submit %>
      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>